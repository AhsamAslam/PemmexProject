@model EmailViewModel

<div class="login-page">
    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="SendEmailForPasswordReset">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input type="email" class="form-control" placeholder="Enter your email" asp-for="Email" autocomplete="on">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="email">Save</button>
                                <button class="btn btn-default" name="button" value="cancel">Cancel</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>